FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy frontend code
COPY frontend/ .

# Expose port
EXPOSE 8080

# Run the application
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]